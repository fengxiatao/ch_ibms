
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Access Device Configuration",
  "description": "门禁设备特有配置",
  "type": "object",
  "required": ["deviceType", "ipAddress", "port"],
  "properties": {
    "deviceType": {
      "type": "string",
      "const": "ACCESS",
      "description": "设备类型标识"
    },
    "ipAddress": {
      "type": "string",
      "format": "ipv4",
      "description": "设备IP地址"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "description": "设备端口号"
    },
    "username": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 64,
      "description": "登录用户名"
    },
    "password": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 128,
      "description": "登录密码(加密)"
    },
    "firmwareVersion": {
      "type": ["string", "null"],
      "pattern": "^\\d+\\.\\d+\\.\\d+",
      "description": "固件版本号"
    },
    "sdkVersion": {
      "type": ["string", "null"],
      "description": "SDK版本号"
    },
    "activated": {
      "type": ["boolean", "null"],
      "default": false,
      "description": "是否已激活"
    },
    "activationTime": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "激活时间"
    }
  }
}
